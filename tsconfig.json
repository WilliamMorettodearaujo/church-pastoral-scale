{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true, 
      "forceConsistentCasingInFileNames": true,      
      "skipLibCheck": true ,
      "types": ["node", "express"],       
   },
   "include": ["src"],
   "exclude": ["node_modules"]
}